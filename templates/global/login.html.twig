{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block monTitre %}Login{% endblock %}
{% block body %}
{% if error %}
    <div class="alert alert-danger">
        Le login et mdp ne sont pas bon.
    </div>
{% endif %}
<form action="{{path('login')}}" method="post">
    <div class="form-groupe">
        <label>Login :</label>
        <input type="text" require name="_username" class="form-control" value="{{lastUserName}}"/>
    </div>
    <div class="form-groupe">
        <label>Password :</label>
        <input type="password" require name="_password" class="form-control"/>
    </div>
    <input type="submit" class="btn btn-primary" value="s'identifier"/>

</form>

{% endblock %}
